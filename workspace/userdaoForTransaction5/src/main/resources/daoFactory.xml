<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd 
			http://www.springframework.org/schema/context http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<context:annotation-config />
	
	<bean id="userDaoImpl" class="kr.ac.jejuuniv.UserDaoImpl">
		<property name="jdbcTemplate" ref="jdbcTemplate"></property>
	</bean>
	
	<bean id="userDaoTx" class="kr.ac.jejuuniv.UserDaoTx">
		<property name="userDao" ref="userDaoImpl"></property>
	</bean>

	<bean id="userDao" class="kr.ac.jejuuniv.TransactionFactoryBean">
		<property name="daoInterface" value="kr.ac.jejuuniv.UserDao"/>
		<property name="target" ref="userDaoImpl"></property>
		<property name="patterns">
			<array>
				<value>add</value>
				<value>delete</value>
			</array>
		</property>
		<property name="transactionManager" ref="transactionManager"/>
	</bean>

	<bean id="jdbcTemplate" class="org.springframework.jdbc.core.JdbcTemplate">
		<property name="dataSource" ref="dataSource" />
	</bean>
	
	<bean id="transactionManager" class="org.springframework.jdbc.datasource.DataSourceTransactionManager">
		<property name="dataSource" ref="dataSource" />
	</bean>

	<bean id="dataSource" class="org.springframework.jdbc.datasource.SimpleDriverDataSource" >
		<property name="driverClass" value="com.mysql.jdbc.Driver" />
		<property name="url" value="jdbc:mysql://localhost/jeju?characterEncoding=utf-8" />
		<property name="username" value="jeju" />
		<property name="password" value="jejupw" />
	</bean>

</beans>
